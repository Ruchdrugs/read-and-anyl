{
  "manifest_version": 3,
  "name": "Interview Autofill Agent with ChatGPT API",
  "description": "Reads interview questions on supported pages and drafts answers using your configured LLM persona with ChatGPT web interface API support.",
  "version": "0.2.0",
  "icons": {
    "16": "extension/assets/icon16.png",
    "48": "extension/assets/icon48.png",
    "128": "extension/assets/icon128.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs",
    "nativeMessaging"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "extension/src/background.js"
  },
  "action": {
    "default_title": "Interview Autofill Agent with ChatGPT API",
    "default_popup": "extension/src/popup.html"
  },
  "options_ui": {
    "page": "extension/src/options.html",
    "open_in_tab": true
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["extension/src/content.js"],
      "run_at": "document_idle",
      "all_frames": true
    },
    {
      "matches": ["https://chat.openai.com/*"],
      "js": ["extension/src/chatgpt-content.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ]
}
